<div class="d-flex justify-content-center">
    <div class="card col-lg-6">
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="d-flex justify-content-around flex-wrap">
                <button class="btn btn-primary ">{{ button_label|default('Save') }}</button>
                {% if form.vars.value.id is not null %}
                    <a href="{{ path('user_delete', {id:form.vars.value.id}) }}" class="btn btn-danger ">Delete</a>
                {% endif %}
                <a href="{{ path('user_index', {'role':'all'}) }}" class="btn btn-light ">Cancel</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
