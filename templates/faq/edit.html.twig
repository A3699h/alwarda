{% extends 'base.html.twig' %}

{% block title %}Edit FAQ{% endblock %}

{% block body %}
    <div class="page-header">
        <h3 class="page-title">
            Edit section
        </h3>
    </div>

    <div class="d-flex justify-content-center">
        <div class="card col-lg-8">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="d-flex flex-column">
                    {{ form_row(form.question) }}
                    {{ form_row(form.questionAr) }}
                    {{ form_row(form.answer) }}
                    {{ form_row(form.answerAr) }}
                </div>
                <div class="d-flex justify-content-around flex-wrap">
                    <button class="btn btn-primary ">{{ button_label|default('Save') }}</button>
                    {% if form.vars.value.id is not null %}
                        <a href="{{ path('faq_delete', {id:faq.id}) }}" class="btn btn-danger ">Delete</a>
                    {% endif %}
                    <a href="{{ path('faq_index') }}" class="btn btn-light ">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}
