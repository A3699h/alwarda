<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/x-icon" href="{{ asset('build/dashboard/favicon.png') }}" />
    {{ encore_entry_link_tags('app') }}
    <title>Connection</title>
</head>
<body>
<div class="container-scroller">
    <div class="main-panel w-100">
        <div class="content-wrapper">
            <div class="h-100">
                <div class="d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 col-md-6 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo d-flex justify-content-center align-items-center">
                                    <img src="{{ asset('build/dashboard/logo1.png') }}" alt="logo">
                                </div>
{#                                <h3 class="text-center"><span class="text-uppercase">Alwarda</span> Dashboard</h3>#}
                                <form class="pt-3" method="post">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-lg"
                                               value="{{ last_username }}" name="email" id="inputEmail"
                                               placeholder="Email">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control form-control-lg"
                                               type="password" name="password" id="inputPassword"
                                               placeholder="Password" required>
                                    </div>
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}">
                                    <div class="mt-3">
                                        <button type="submit"
                                                class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn"
                                        >SIGN IN
                                        </button>
                                    </div>
                                    <div class="my-2 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                <input
                                                        class="form-check-input"
                                                        type="checkbox"
                                                        name="_remember_me">
                                                <i class="input-helper"></i>
                                                Keep me signed in
                                            </label>
                                        </div>
{#                                        <a href="#" class="auth-link text-black">Forgot password ?</a>#}
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</body>
{{ encore_entry_script_tags('app') }}
</html>
