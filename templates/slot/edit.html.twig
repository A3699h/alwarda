{% extends 'base.html.twig' %}

{% block title %}Edit Slot{% endblock %}

{% block body %}
    <div class="page-header">
        <h3 class="page-title">
            Edit Slot : {{ slot.name }}
        </h3>
    </div>

    <div class="d-flex justify-content-center">
        <div class="card col-lg-8">
            <div class="card-body">
                {{ form_start(form) }}
               <div class="d-flex">
                   <div class="col-6">
                       {{ form_row(form.name, { 'attr': {'tabindex': '1'}}) }}
                       {{ form_row(form.showAt, { 'attr': {'tabindex': '3'}}) }}
                       {{ form_row(form.deliveryAt, { 'attr': {'tabindex': 5}}) }}
                       {{ form_row(form.type, { 'attr': {'tabindex': '7'}}) }}
                   </div>
                   <div class="col-6">
                       {{ form_row(form.maxOrders, { 'attr': {'tabindex': '2'}}) }}
                       {{ form_row(form.closeAt, { 'attr': {'tabindex': '4'}}) }}
                       {{ form_row(form.deliveryTo, { 'attr': {'tabindex': '6'}}) }}
                       {{ form_row(form.active, { 'attr': {'tabindex': '8'}}) }}
                   </div>
               </div>
               <div class="d-flex">
                   <div class="col-6">
                       {{ form_row(form.saturday, { 'attr': {'tabindex': '9'}}) }}
                       {{ form_row(form.monday, { 'attr': {'tabindex': '11'}}) }}
                       {{ form_row(form.wednesday, { 'attr': {'tabindex': '13'}}) }}
                       {{ form_row(form.friday, { 'attr': {'tabindex': '15'}}) }}
                   </div>
                   <div class="col-6">
                       {{ form_row(form.sunday, { 'attr': {'tabindex': '10'}}) }}
                       {{ form_row(form.tuesday, { 'attr': {'tabindex': '12'}}) }}
                       {{ form_row(form.thursday, { 'attr': {'tabindex': '14'}}) }}
                   </div>
               </div>
                <div class="d-flex justify-content-around flex-wrap">
                    <button class="btn btn-primary ">{{ button_label|default('Save') }}</button>
                    {% if form.vars.value.id is not null %}
                        <a href="{{ path('slot_delete', {id:slot.id}) }}" class="btn btn-danger ">Delete</a>
                    {% endif %}
                    <a href="{{ path('slot_index') }}" class="btn btn-light ">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}
