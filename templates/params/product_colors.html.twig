{% extends 'base.html.twig' %}

{% block title %}Products Colors{% endblock %}

{% block body %}
    <div class="page-header">
        <h3 class="page-title">
            Products Colors
        </h3>
    </div>
    <div class="d-flex justify-content-around flex-wrap">
        <div class="card col-lg-4 mb-3 mb-lg-0 h-100">
            <div class="card-title mt-3 text-info">
                Add new Color
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="d-flex justify-content-around flex-wrap">
                        <button class="btn btn-primary ">{{ button_label|default('Save') }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="card col-lg-7">
            <div class="card-title mt-3 text-info">
                Product Colors
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Color name</th>
                        <th>Color</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for color in colors %}
                        <tr>
                            <td>{{ color.color }}</td>
                            <td>
                                <div class="btn" style="cursor: default; background-color: {{ color.code }};"></div>
                            </td>
                            <td>
                                <a href="{{ path('delete_product_color', {id: color.id}) }}">
                                    <i class="mdi mdi-delete text-danger" style="font-size: 1.3rem"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No defined colors</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
