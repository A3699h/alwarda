{% extends 'front/base.html.twig' %}

{% block javascripts %}
    {{ encore_entry_script_tags('frontProfile') }}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('frontProfile') }}
{% endblock %}

{% block body %}
    <div class="container col-lg-7 custom_breadcrumb">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb pl-0">
                <li class="breadcrumb-item"><a href="{{ path('front_index') }}">{{ 'Home'|trans  }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ 'Personnal Account'|trans  }}</li>
            </ol>
        </nav>
    </div>
    <div class="header-section d-lg-block d-flex flex-column justify-content-between align-items-start container col-lg-7">
        <h1 class="big-title">{{ 'My Account'|trans  }}</h1>
        <h2 class="mt-4">{{app.user.fullName}}
            <a href="{{ path('front_logout') }}"><img src="{{ asset('build/front/logout-icon.png') }}"
                                                      alt="logout icon"></a></h2>
        <h3>{{app.user.email}}</h3>
        <div class="d-flex align-items-center mt-4 flex-wrap">
            <a class="profileBtn mr-3 mt-3" href="{{ path('front_recipients-list') }}">
                <img src="{{ asset('build/front/recipients-list-icon.png') }}" alt="recipients list icon">
                {{ 'Recipients List'|trans  }}
            </a>
            <a class="profileBtn mr-3 mt-3" href="{{ path('front_manage_orders', {'status': 'current'}) }}">
                <img src="{{ asset('build/front/manage-orders-icon.png') }}" alt="manage orders icon">
                {{ 'Manage Orders'|trans  }}
            </a>
            <a class="profileBtn mt-3" href="{{ path('front_reset_password') }}">
                <img src="{{ asset('build/front/change-password-icon.png') }}" alt="change password icon">
                {{ 'Change Password'|trans  }}
            </a>
        </div>
    </div>

{% endblock %}

