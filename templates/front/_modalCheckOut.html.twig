<div id="checkOutModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog step1">
        <div class="modal-content">
            <div class="header">
                <h1 class="big-title">{{ 'Cart'|trans  }} ( <span class="itemsCount">1</span> )</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mb-5 d-flex flex-column justify-content-around">

            </div>
            <div class="modal-footer-container">
                <div class="modal-footer d-flex flex-column container-fluid">
                    <div class="row d-flex justify-content-between align-items-center w-100">
                        <h2>{{ 'Tax'|trans  }} ( 5% )</h2>
                        <h3 id="cartTaxPrice">
                            {# Value goes here via JS #}
                        </h3>
                    </div>
                    <div class="row d-flex justify-content-between align-items-center w-100">
                        <h2>{{ 'Total'|trans  }}</h2>
                        <h3 id="cartTotalPrice">
                            {# Value goes here via JS #}
                        </h3>
                    </div>
                    <div class="row d-flex justify-content-between align-items-center w-100">
                        <h2>{{ 'Delivery'|trans  }}</h2>
                        <h3 id="cartDeliveryPrice">
                            {# Value goes here via JS #}
                        </h3>
                    </div>
                    <div class="row d-flex justify-content-end w-100 mt-4 mb-5">
                        <button class="btn confirmBtn">{{ 'Confirm'|trans  }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-dialog step2 d-none">
        <div class="modal-content">
            <div class="header">
                <h1 class="big-title">{{ 'Check out'|trans  }}</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mb-3 col-12 col-md-8 offset-md-1 d-flex flex-column justify-content-around">
                <h4 class="d-flex align-items-baseline justify-content-between">{{ 'Recipent Data'|trans  }}
                    <a href="{{ path('front_recipients-list') }}" style="font-size: 1rem">{{ 'Manage recipients'|trans  }}</a>
                </h4>
                <div id="checkoutReicpientsList">

                </div>
                {#                <div class="form-group">#}
                {#                    <input type="text" class="form-control" placeholder="Name (optional)">#}
                {#                </div>#}
                {#                <div class="form-group d-flex">#}
                {#                    <input type="text" class="form-control col-3" value="+966">#}
                {#                    <input type="text" class="form-control col-9" placeholder="Phone number">#}
                {#                </div>#}
                {#                <div class="form-group d-flex">#}
                {#                    <input type="text" class="form-control col-3" value="city" disabled>#}
                {#                    <input type="text" class="form-control col-9" placeholder="Address (Optional)">#}
                {#                </div>#}
                <h4 class="mt-3">{{ 'Date'|trans  }}</h4>
                <div class="form-group d-flex">
                    <input type="date" name="deliverydate" id="" class="col-5 form-control mr-3">
                    <select name="slot" id="checkoutDeliverySlots" class="col-4 form-control">

                    </select>
                </div>
                <h4 class="mt-3">{{ 'Card Details'|trans  }}</h4>
                <div class="form-group">
                    <textarea name="cardDetails" id="" rows="5" class="form-control"></textarea>
                </div>
                <h4 class="mt-3">{{ 'Express Your Love'|trans  }}</h4>
                <input type="hidden" id="checkoutUploadType">
                <div class="form-group d-flex flex-sm-row flex-column msgBtn justify-content-between">
                    <button class="btn addLinkBtn">
                        <img src="{{ asset('build/front/add-link-icon.png') }}" alt="add link icon">
                       {{ 'Add Link'|trans  }}
                    </button>
                    <button class="btn addVideoBtn">
                        <img src="{{ asset('build/front/add-video-icon.png') }}" alt="add video icon">
                        {{ 'Add Video'|trans  }}
                    </button>
                    <button class="btn addVoiceBtn">
                        <img src="{{ asset('build/front/add-voice-icon.png') }}" alt="add voice icon">
                        {{ 'Add Voice'|trans  }}
                    </button>
                </div>
                <div class="form-group">
                    <input type="text" id="checkoutUploadTypeLink" class="form-control d-none">
                    <input type="file" id="checkoutUploadTypeFile" class="form-control d-none" accept="video/*"
                           style="padding: 0">
                    <button class="btn recordBtn d-none" id="checkoutUploadTypeVoice">{{ 'Start Recording'|trans  }}</button>
                    <span class="ml-2 d-none" id="checkoutUploadTypeVoicePreview"></span>
                </div>
            </div>
            <div class="alert">
                <span id="checkoutStep2FormError" class="text-danger"></span>
            </div>
            <div class="modal-footer-container">
                <div class="modal-footer d-flex flex-column container-fluid">
                    <div class="row d-flex justify-content-lg-end justify-content-center w-100 mt-4 mb-5">
                        <button class="btn backBtn mr-4">{{ 'Back to Cart'|trans  }}</button>
                        <button class="btn confirmBtn mt-4 mt-lg-0">{{ 'Confirm'|trans  }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-dialog step3 d-none">
        <div class="modal-content">
            <div class="header">
                <h1 class="big-title">{{ 'Payment'|trans  }}</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mb-3 col-12 col-md-8 offset-md-1 d-flex flex-column justify-content-around">
                <h4>{{ 'Card'|trans  }}</h4>
                <div class="form-group">
                    <div class="dropdown" id="checkoutPaymentMethod">
                        <form id="form-container" method="post" action="/charge">
                            <!-- Tap element will be here -->
                            <div id="element-container"></div>
                            <div id="error-handler" class="text-danger" role="alert"></div>
                            <div id="success" style=" display: none;;position: relative;float: left;">
                                Success! Your token is <span id="token"></span>
                            </div>
{#                            <button type="button" id="testPay">test payment</button>#}
                        </form>
                    </div>
                </div>
                <h4 class="mt-4">{{ 'Do you have a coupon?'|trans  }}</h4>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Coupon" id="discountVoucherInput">
                    <div class="alert">
                        <span class="text-danger" id="checkoutModalVoucherError"></span>
                        <span class="text-success" id="checkoutModalVoucherValid"></span>
                    </div>
                </div>
                <h4 class="mt-3">{{ 'Sommary'|trans  }}</h4>
                <div class="sommary-section">
                    <div class="d-flex justify-content-between mb-2">
                        <span>{{ 'Order'|trans  }}</span>
                        <span class="orderSubTotalPrice"></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>{{ 'Tax'|trans  }} (5%)</span>
                        <span class="orderTaxPrice"></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>{{ 'Delivery'|trans  }}</span>
                        <span class="orderDeliveryPrice"></span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>{{ 'Coupon'|trans  }}</span>
                        <span class="orderVoucherDiscountValue"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="font-weight-bold">{{ 'Total Price'|trans  }}</span>
                        <span class="orderTotalPrice font-weight-bold"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer-container">
                <div class="modal-footer d-flex flex-column container-fluid">
                    <div class="row d-flex justify-content-lg-end justify-content-center w-100 mt-4 mb-5">
                        <button class="btn backBtn mr-4">{{ 'Back to Check Out'|trans  }}</button>
                        <button class="btn confirmBtn mt-3 mt-lg-0">{{ 'Confirm'|trans  }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-dialog step4 d-none">
        <div class="modal-content">
            <div class="header">
                <h1 class="big-title">{{ 'Done'|trans  }}</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mb-3">
                <h5>{{ 'Congratulation!'|trans  }}</h5>
                <p>{{ 'Your order has been sent'|trans  }}.</p>
            </div>
            <div class="modal-footer-container">
                <div class="modal-footer d-flex flex-column container-fluid">
                    <div class="row d-flex justify-content-end w-100 mt-4 mb-5">
                        <button class="btn confirmBtn">{{ 'Track Order'|trans  }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
